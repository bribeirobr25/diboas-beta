{
  "name": "diboas-platform",
  "version": "1.0.0",
  "description": "diBoaS OneFi Platform - Pure DDD, Event-Driven, Service Agnostic Financial Platform",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "node server/dev-server.js",
    "build": "node scripts/build.js",
    "build:github-pages": "node scripts/github-pages-build.js",
    "build:cloudflare": "./build.sh",
    "build:landing": "node scripts/build-subdomain.js --subdomain=landing",
    "build:dapp": "node scripts/build-subdomain.js --subdomain=dapp",
    "build:docs": "node scripts/build-subdomain.js --subdomain=docs",
    "build:learn": "node scripts/build-subdomain.js --subdomain=learn",
    "build:mascots": "node scripts/build-subdomain.js --subdomain=mascots",
    "build:investors": "node scripts/build-subdomain.js --subdomain=investors",
    "build:b2b": "node scripts/build-subdomain.js --subdomain=b2b",
    "preview": "node server/preview-server.js",
    "clean": "rimraf dist",
    "process-urls:dev": "node src/application/navigation/UrlProcessorCLI.js --env development --verbose",
    "process-urls:prod": "node src/application/navigation/UrlProcessorCLI.js --env production --verbose",
    "process-urls:dry": "node src/application/navigation/UrlProcessorCLI.js --dry-run --verbose",
    "process-urls:test": "node src/application/navigation/UrlProcessorCLI.js --env development --dry-run",
    "lint": "echo 'Linting not configured yet'",
    "test": "node tests/integration/test-modules.js",
    "test:modules": "node tests/integration/test-modules.js",
    "test:server": "node tests/integration/test-dev-server.js",
    "verify": "node scripts/verify-running.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "chokidar": "^3.5.3",
    "fs-extra": "^11.1.1",
    "rimraf": "^5.0.5",
    "chalk": "^5.3.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.0",
  "keywords": [
    "diboas",
    "oneFi",
    "crypto",
    "defi",
    "investment",
    "AI",
    "domain-driven-design",
    "event-driven-architecture",
    "service-agnostic"
  ],
  "author": "diBoaS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bribeirobr25/diboas-beta.git"
  }
}